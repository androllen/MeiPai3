                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelPetSelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Hot_Guys" 
                       SizeChanged="HotGuysGrid_SizeChanged">
