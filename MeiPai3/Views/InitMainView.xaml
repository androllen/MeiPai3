                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelCelebritySelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Beauty" 
