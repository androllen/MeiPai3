                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelGourmetSelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Funny" 
                       SizeChanged="FunnyGrid_SizeChanged">
