                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelFunnySelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Fashion" 
                       SizeChanged="FashionGrid_SizeChanged">
                <GridView x:Name="channelFashionView"
                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelFashionSelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Music" 
                       SizeChanged="MusicGrid_SizeChanged">
                <GridView x:Name="channelMusicView"
                    SelectionMode="None"
                    IsSwipeEnabled="False"
                    IsItemClickEnabled="True"
                    cm:Message.Attach="[Event ItemClick] = [channelMusicSelected($clickedItem)]"/>
            </PivotItem>
            <PivotItem x:Uid="header_channel_Dance" 
