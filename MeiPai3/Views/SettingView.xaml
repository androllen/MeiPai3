<Page
    x:Class="MeiPai3.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeiPai3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="{Binding Source={StaticResource GlobalInfoManager},Path=mAppTheme}">

    <Grid Background="{ThemeResource app_background}">
        <ToggleSwitch Margin="8"
                          HorizontalAlignment="Stretch"
                          Header="夜间模式"
                          IsEnabled="True"
                          IsOn="{Binding Source={StaticResource GlobalInfoManager},
                                         Path=mIsNightMode,
                                         Mode=TwoWay}"
                          OffContent="关"
                          OnContent="开" />
    </Grid>
</Page>
